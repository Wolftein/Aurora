[Properties.Blend]  # Straight Alpha-Blending

    SrcColor        = "SrcAlpha"
    DstColor        = "OneMinusSrcAlpha"
    SrcAlpha        = "SrcAlpha"
    DstAlpha        = "OneMinusSrcAlpha"

[Properties.Depth]  # Enable Depth Write / Depth Testing

    Mask            = 1
    Condition       = "LessEqual"

[Properties.Layout]

    Attributes      = [
        ["POSITION",  "Float32x3",   0,  0],
        ["TEXCOORD0", "Float32x2",   0, 12],
        ["COLOR",     "UIntNorm8x4", 0, 20],
    ]

    Primitive       = "TriangleList"

[Program.Textures]

    Diffuse         = 0

[Program.Vertex]

    Entry           = "vertex"
    Filename        = "Engine://Pipeline/Sprite.shader"
    Defines  	    = [
        "ENABLE_ALPHA_TEST"
    ]

[Program.Fragment]

    Entry           = "fragment"
    Filename        = "Engine://Pipeline/Sprite.shader"
    Defines  	    = [
        "ENABLE_ALPHA_TEST"
    ]